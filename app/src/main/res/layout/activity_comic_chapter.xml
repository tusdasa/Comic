<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".ui.ComicDetailActivity">

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/detailsCover"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:background="@color/white"
                />
            <TextView
                android:id="@+id/detailsName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignStart="@+id/detailsCover"
                android:layout_marginStart="170dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="10dp"
                android:textSize="19sp"
                android:gravity="center_vertical"
                android:text="漫画名"
                />

            <TextView
                android:id="@+id/detailsLastUpdate"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_alignBottom="@+id/detailsName"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="170dp"
                android:text="最后更新于3天前"
                android:gravity="center_vertical"
                android:layout_marginBottom="-25dp" />

            <TextView
                android:id="@+id/detailsHeat"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_alignBottom="@+id/detailsName"
                android:layout_marginStart="170dp"
                android:layout_marginEnd="5dp"
                android:text="热度:1000"
                android:gravity="center_vertical"
                android:layout_marginBottom="-50dp" />
            <TextView
                android:id="@+id/introduction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/detailsName"
                android:layout_marginStart="170dp"
                android:layout_marginEnd="5dp"
                android:text="简介"
                android:gravity="center_vertical"
                android:layout_marginBottom="-80dp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="70dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:gravity="center"
            >
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dip"
                android:gravity="center"
                android:text="👀 看看"
                 />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:gravity="center"
            >
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dip"
                android:gravity="center"
                android:text="👍 喜欢"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/chapterList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>


</LinearLayout>